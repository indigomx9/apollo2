{
    "compilerOptions": {
        "outDir": "./dist/",
        "moduleResolution": "node",
        "allowJs": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "strict": true,
        "jsx": "react",
        "module": "esnext",
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*"]
}

