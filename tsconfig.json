{
    "compilerOptions": {
        "outDir": "./dist/",
        "moduleResolution": "node",
        "allowJs": true,
        "resolveJsonModule": true,
        "module": "commonjs",
        "target": "es2016",
        "lib": ["dom", "es2017", "esnext.asynciterable"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*"]
}

